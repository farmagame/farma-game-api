generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  permissions  Role       @default(VIEWER)
  createdAt DateTime   @default(now())
  Question  Question[]
}

model Reports {
  id       String     @id @default(uuid())
  idUser   String
  age      Int
  sex      String
  city     String
  state    String
  typeGame String
  questions Question[]
}

model Category {
  id             String       @id @default(uuid())
  category String     @unique
  question Question[]
}

model Question {
  id         String     @id @default(uuid())
  ask        String
  hint       String
  status     Status    @default(ACTIVE)
  answer     String
  categoryId String
  userId     String
  options    Options[]
  reports    Reports[]
  category   Category  @relation(fields: [categoryId], references: [id])
  user       User      @relation(fields: [userId], references: [id])
}

model Options {
  id         String   @id @default(uuid())
  label      String
  check      Boolean  @default(true)
  questionId String
  Question   Question @relation(fields: [questionId], references: [id])
}

enum Role {
  ADMIN
  GENERAL
  REGISTRAR
  VIEWER
  REPORT
}

enum Status {
  INACTIVE
  ACTIVE
}
